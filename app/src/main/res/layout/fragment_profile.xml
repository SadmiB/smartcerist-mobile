<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:contentDescription="profile image"
            android:src="@drawable/ic_account" />

        <Button
            android:id="@+id/uploadPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Picture" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profileFirstName"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="First Name"
                app:layout_constraintBottom_toTopOf="@+id/profileLastName"
                app:layout_constraintEnd_toStartOf="@+id/profileFirstName_2"
                app:layout_constraintHorizontal_bias="0.777"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/profileFirstName_2"
                android:layout_width="175dp"
                android:layout_height="25dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="8dp"
                android:text="first name"
                app:layout_constraintBottom_toBottomOf="@+id/profileFirstName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profileFirstName"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/profileLastName"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:text="Last Name"
                app:layout_constraintBottom_toTopOf="@+id/profileEmail"
                app:layout_constraintEnd_toEndOf="@+id/profileFirstName"
                app:layout_constraintStart_toStartOf="@+id/profileFirstName"
                app:layout_constraintTop_toBottomOf="@+id/profileFirstName"
                tools:layout_editor_absoluteY="81dp" />

            <TextView
                android:id="@+id/profileLastName_2"
                android:layout_width="175dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="last name "
                app:layout_constraintBottom_toBottomOf="@+id/profileLastName"
                app:layout_constraintEnd_toEndOf="@+id/profileFirstName_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profileFirstName_2"
                app:layout_constraintTop_toTopOf="@+id/profileLastName"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                android:text="Email"
                app:layout_constraintBottom_toTopOf="@+id/profilePhone"
                app:layout_constraintEnd_toEndOf="@+id/profileLastName"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profileLastName"
                app:layout_constraintTop_toBottomOf="@+id/profileLastName"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/profileEmail_2"
                android:layout_width="175dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:text="email"
                app:layout_constraintBottom_toBottomOf="@+id/profileEmail"
                app:layout_constraintEnd_toEndOf="@+id/profileLastName_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profileLastName_2"
                app:layout_constraintTop_toTopOf="@+id/profileEmail"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/profilePhone"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:text="Phone"
                app:layout_constraintBottom_toTopOf="@+id/profileCountry"
                app:layout_constraintEnd_toEndOf="@+id/profileEmail"
                app:layout_constraintStart_toStartOf="@+id/profileEmail"
                app:layout_constraintTop_toBottomOf="@+id/profileEmail"
                tools:layout_editor_absoluteY="196dp" />

            <TextView
                android:id="@+id/profilePhone_2"
                android:layout_width="175dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="phone"
                app:layout_constraintBottom_toBottomOf="@+id/profilePhone"
                app:layout_constraintEnd_toEndOf="@+id/profileEmail_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profileEmail_2"
                app:layout_constraintTop_toTopOf="@+id/profilePhone"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/profileCountry"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="44dp"
                android:text="Country"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilePhone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/profilePhone"
                app:layout_constraintTop_toBottomOf="@+id/profilePhone"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/profileCountry_2"
                android:layout_width="175dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="country"
                app:layout_constraintBottom_toBottomOf="@+id/profileCountry"
                app:layout_constraintEnd_toEndOf="@+id/profilePhone_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profilePhone_2"
                app:layout_constraintTop_toTopOf="@+id/profileCountry"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>